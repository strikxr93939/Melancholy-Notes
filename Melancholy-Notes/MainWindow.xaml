<Window x:Class="MelancholyNotes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🌙 Melancholy Notes" Height="600" Width="900"
        Background="#1a1a2e" WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize" WindowStyle="None" AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        FontFamily="./Fonts/Pixel 2.0.ttf#Pixel 2.0">

    <Window.Resources>
        <!-- Стили для кнопок -->
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Background" Value="#7b68ee"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#9b88ff"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для списка заметок -->
        <Style x:Key="NoteListItem" TargetType="ListBoxItem">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#7b68ee"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#253052"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кастомная шапка окна -->
        <Border Grid.Row="0" Background="#0f1419" 
                BorderBrush="#7b68ee" BorderThickness="0,0,0,1">
            <Grid>
                <TextBlock Text="🌙 Melancholy Notes" 
                           Foreground="#7b68ee" FontSize="16" 
                           FontFamily="Consolas" FontWeight="Bold"
                           VerticalAlignment="Center" Margin="15,0,0,0"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,5,0">
                    <Button Content="—" 
                            Width="40" Height="30" Margin="2"
                            Background="Transparent" FontSize="18"
                            Foreground="#e0e0e0" BorderThickness="0"
                            Padding="0" Cursor="Hand" FontFamily="Consolas"
                            Click="MinimizeButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#7b68ee"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="✕"
                            Width="40" Height="30" Margin="2"
                            Background="Transparent" FontSize="16"
                            Foreground="#e0e0e0" BorderThickness="0"
                            Padding="0" Cursor="Hand" FontFamily="Consolas"
                            Click="CloseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#c74b50"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель - список заметок -->
            <Border Grid.Column="0" Background="#0f1419" BorderBrush="#7b68ee" BorderThickness="0,0,2,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Поиск -->
                    <Border Grid.Row="0" Background="#16213e" CornerRadius="5" 
                            Margin="15,15,15,15" Height="35">
                        <TextBox x:Name="SearchBox" 
                                 Background="Transparent" Foreground="#e0e0e0"
                                 BorderThickness="0" Padding="10"
                                 FontFamily="Consolas" FontSize="13"
                                 VerticalContentAlignment="Center"
                                 TextChanged="SearchBox_TextChanged"/>
                    </Border>
                    <TextBlock Grid.Row="0" Text="🔍 Поиск..." 
                               Foreground="#808080" FontFamily="Consolas"
                               Margin="25,27,0,0" IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Список заметок -->
                    <ListBox Grid.Row="1" x:Name="NotesListBox" 
                             Background="Transparent" BorderThickness="0"
                             Margin="15,0,15,10" 
                             ItemContainerStyle="{StaticResource NoteListItem}"
                             SelectionChanged="NotesListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" 
                                               FontSize="14" Foreground="#e0e0e0"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding Preview}" FontSize="11" 
                                               Foreground="#a0a0a0" Margin="0,3,0,0"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding CreatedDate, StringFormat='📅 {0:dd.MM.yyyy HH:mm}'}" 
                                               FontSize="10" Foreground="#707070" Margin="0,3,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Кнопка новой заметки -->
                    <Button Grid.Row="2" Content="➕ Новая заметка" 
                            Style="{StaticResource MenuButton}"
                            Margin="15,0,15,15" Height="40"
                            Click="NewNote_Click"/>
                </Grid>
            </Border>

            <!-- Правая панель - редактор -->
            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок заметки -->
                <Border Grid.Row="0" Background="#16213e" CornerRadius="5" 
                        Margin="0,0,0,15" Height="50">
                    <TextBox x:Name="TitleBox" 
                             Background="Transparent" Foreground="#e0e0e0"
                             BorderThickness="0" Padding="10"
                             FontFamily="Consolas" FontSize="24" FontWeight="Bold"
                             VerticalContentAlignment="Center"
                             TextChanged="TitleBox_TextChanged"/>
                </Border>
                <TextBlock Grid.Row="0" Text="✨ Заголовок заметки..." 
                           Foreground="#505050" FontSize="24"
                           Margin="10,13,0,0" IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=TitleBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Содержимое заметки -->
                <Border Grid.Row="1" Background="#16213e" CornerRadius="5">
                    <TextBox x:Name="ContentBox" 
                             Background="Transparent" Foreground="#e0e0e0"
                             BorderThickness="0" Padding="10"
                             FontFamily="Consolas" FontSize="13"
                             AcceptsReturn="True" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             TextChanged="ContentBox_TextChanged"/>
                </Border>
                <TextBlock Grid.Row="1" Text="📝 Начните писать..." 
                           Foreground="#505050" FontSize="14"
                           Margin="10,10,0,0" IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=ContentBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Кнопки действий -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" 
                            HorizontalAlignment="Right" Margin="0,15,0,0">
                    <Button Content="💾 Сохранить" Style="{StaticResource MenuButton}"
                            Click="SaveNote_Click" Width="130"/>
                    <Button Content="🗑️ Удалить" 
                            Click="DeleteNote_Click" Width="120"
                            Background="#c74b50" Foreground="#e0e0e0"
                            BorderThickness="0" Padding="15,8" Margin="5"
                            Cursor="Hand" FontFamily="Consolas" FontSize="14">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#e05555"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>